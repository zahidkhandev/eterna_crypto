generator client {
  provider = "prisma-client"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
}

model Order {
  id          String   @id @default(uuid())
  type        String
  side        String
  asset       String
  amount      Float
  status      String
  txHash      String?
  price       Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}